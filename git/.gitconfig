[credential "https://github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential

[user]
	email = simon@3450.dk
	name = Simon Vinding Brodersen

[init]
	defaultBranch = main
	templateDir = /home/simon/.git-template

[core]
  pager = delta

[merge]
  conflictstyle = diff3
	tool = nvimdiffview

[mergetool.nvimdiffview]
  cmd = nvim -n -c"DiffviewOpen" "$MERGE"

[mergetool.nvimdiff]
  layout = "(LOCAL,REMOTE)/MERGED"

[mergetool]
  prompt = false
	keepBackup = false

[diff]
  colorMoved = default

[interactive]
  diffFilter = delta --color-only

[delta]
  line-numbers = true
  navigate = true

[pull]
	rebase = false
